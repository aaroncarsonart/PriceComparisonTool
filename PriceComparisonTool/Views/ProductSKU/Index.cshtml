@model IEnumerable<PriceComparisonTool.Models.ProductSKU>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="row">
    <div class="col-md-12">
        <p>
            <em>ProductSKU's</em> are numbered codes used by
             <em>Stores</em> to identify certain types of 
            <em>Products</em> which do not have a UPC. Most
            <em>Stores</em> have their own unique SKU code
            which is only used by them. With <em>Price Comparsion Tool</em> 
            you can associate the products and prices with a
            particular <em>Stores</em> in order to help you find
            the <em>Price</em> of your favorite goods at each <em>Store</em>.
        </p>
        <p>
            To view the ProductSKUs, Select the <em>"Products"</em> link from
            the drop-down at the top of the page and select the <em>"Details"</em> link.
        </p>
    </div>
</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Store.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SKU)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Store.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SKU)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
